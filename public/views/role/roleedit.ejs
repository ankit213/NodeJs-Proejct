<% layout('../layout') -%>
<h3>Edit Role</h3>

<form method="post" action="/role/edit/<%= roleId %>">
    <div class="form-group">
        <label for="rolename">Role Name</label>
        <input type="text" class="form-control" name="roleObj[name]" value="<%= rolename %>" placeholder="Role Name">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="button" class="btn btn-default" onclick="window.location.href='/role'">Cancel</button>
</form>
